@model IEnumerable<Travel>
@{
    ViewData["Title"] = "Home page";
}

<section class="women-banner spad" style="padding-top: 100px;">

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="product-slider owl-carousel">
                        <div class="product-item">
                            <div class="pi-pic">
                                <div>
                                    <img src="@item.ImageURL" width="50%" alt="@item.Name">
                                </div>

                                <div class="sale">Available</div>
                                <div class="icon">
                                    <i class="icon_heart_alt"></i>
                                </div>
                                <ul>
                                    <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                                    <li class="quick-view"><a asp-action="Details" asp-route-id="@item.Id">+ Details</a></li>

                                    <li class="w-icon">
                                        <a class="btn btn-success text-white @((DateTime.Now > item.EndDate) ? "disabled" : "")"
                                           asp-controller="Orders"
                                           asp-action="AddItemToShoppingCart"
                                           asp-route-id="@item.Id">
                                            <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </div>


                    </div>


                }
            </div>

        </div>
    </div>
    @await Html.PartialAsync("_CreateItem", "Travels")

</section>

